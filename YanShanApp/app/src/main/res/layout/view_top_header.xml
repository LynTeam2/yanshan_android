<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--android:layout_height="@dimen/statue_bar_top_padding"-->

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_top_root_parent"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/color_gray_default"
        >


        <RelativeLayout
            android:id="@+id/ll_top_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_top_header_titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:paddingLeft="45dp"
                android:paddingRight="42dp" />


            <RelativeLayout
                android:id="@+id/rl_top_header_back"
                android:layout_width="147px"
                android:layout_height="96px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26px">

                <TextView
                    android:id="@+id/tv_top_header_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/white"
                    android:textSize="48px" />

                <ImageView
                    android:id="@+id/iv_top_header_back"
                    android:layout_width="63px"
                    android:layout_height="72px"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_top_header_right"
                android:layout_width="147px"
                android:layout_height="96px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_top_header_right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:textSize="48px" />

                <ImageView
                    android:id="@+id/iv_top_header_right_icon"
                    android:layout_width="63px"
                    android:layout_height="72px"
                    android:layout_centerInParent="true"
                    android:background="@color/colorAccent" />
            </RelativeLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_alignParentBottom="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</RelativeLayout>