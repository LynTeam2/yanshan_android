<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:id="@+id/surface_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:text="00:00"
            android:textColor="#ffffff"
            android:textSize="36px" />

        <SeekBar
            android:id="@+id/bottom_seek_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:max="100"
            android:maxHeight="7px"
            android:minHeight="7px"
            android:paddingBottom="1dp"
            android:progressDrawable="@drawable/jc_client_seek_progress" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24px"
            android:text="00:00"
            android:textColor="#ffffff"
            android:textSize="36px" />


        <TextView
            android:id="@+id/tv_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="24px"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:paddingStart="5px"
            android:textSize="36px" />

        <ImageView
            android:id="@+id/fullscreen"
            android:layout_width="85px"
            android:layout_height="41px"
            android:layout_gravity="center_vertical"
            android:paddingRight="44px"
            android:scaleType="fitXY"
            android:src="@drawable/icon_video_full" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/bottom_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progressDrawable="@drawable/jc_bottom_progress" />

    <!--<ImageView-->
        <!--android:id="@+id/back_tiny"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_marginLeft="6dp"-->
        <!--android:layout_marginTop="6dp"-->
        <!--android:background="@drawable/jc_click_back_tiny_selector"-->
        <!--android:visibility="visible" />-->

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/jc_title_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_marginStart="40px"
            android:layout_marginTop="15px"
            android:padding="5px"
            android:scaleType="fitXY"
            android:src="@drawable/icon_video_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="40px"
            android:layout_marginStart="40px"
            android:layout_marginTop="15px"
            android:padding="5px"
            android:scaleType="fitXY"
            android:src="@drawable/icon_video_unfav" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/jc_loading"
        android:visibility="invisible" />

    <!--播放按钮-->
    <ImageView
        android:id="@+id/start"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_video_play" />

</com.zhy.autolayout.AutoRelativeLayout>
