<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_blue_light1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ycl.framework.view.TitleHeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name = ""
        app:title_divider_visibility = "false"
        >
    </com.ycl.framework.view.TitleHeaderView>
    <LinearLayout
        android:id="@+id/datelinear"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:layout_marginTop="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text=" "/>
        <TextView
            android:layout_marginLeft="30px"
            android:id="@+id/xingqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text=" "/>
        <TextView
            android:layout_marginLeft="30px"
            android:id="@+id/nongli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text=" "/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="200px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/datelinear"
        android:id="@+id/wendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text=" "
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        ></TextView>
    <RelativeLayout
        android:layout_marginLeft="53px"
        android:layout_marginRight="53px"
        android:layout_marginBottom="86px"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="815px"
        android:background="@drawable/weather_bg"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="185px"
            android:id="@+id/rv"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>