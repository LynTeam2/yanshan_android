<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ycl.framework.view.TitleHeaderView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_name = "历史成绩"
            >
        </com.ycl.framework.view.TitleHeaderView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="480px">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计做题"
                    android:textColor="@color/normal_black"/>
                <TextView
                    android:layout_marginTop="30px"
                    android:id="@+id/practice_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20次"
                    android:textSize="80px"
                    android:textColor="@color/normal_red"/>

            </LinearLayout>

        </RelativeLayout>
        <include
            layout="@layout/layout_divider_line1px"
            ></include>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="300px">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/jige_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/normal_blue_light1"/>
                <TextView
                    android:layout_marginTop="50px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="及格次数"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/kaoshi_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/normal_blue_light1"/>
                <TextView
                    android:layout_marginTop="50px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计考试"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/height_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/normal_red"/>
                <TextView
                    android:layout_marginTop="50px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高分"/>
            </LinearLayout>
        </LinearLayout>
        <include
            layout="@layout/layout_divider_line1px"
            ></include>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:textColor="@color/normal_red"
            android:text="历史考试成绩"
            android:gravity="center"
            />
        <include
            layout="@layout/layout_divider_line1px"
            ></include>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        
    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>