<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="510px"
    android:background="@color/windowBackgroundWhite"
    >
    <LinearLayout
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="34px"
        android:layout_marginBottom="34px"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:gravity="center_vertical|left"
        android:textColor="@color/home_normal_gray"
        android:textSize="52px"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px">
        <ImageView
            android:id="@+id/img"
            android:layout_width="300px"
            android:layout_height="200px"
            android:src="@drawable/icon_463_216"
            />
        <TextView
            android:layout_toRightOf="@id/img"
            android:id="@+id/content"
            android:layout_marginLeft="38px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_gray_light1"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            />

            <TextView
                android:visibility="invisible"
                android:id="@+id/nums"
                android:layout_marginRight="38px"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36px"
                android:text="2"
                />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img2"
            android:layout_marginRight="20px"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anjian_message"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/lable"
            android:layout_toLeftOf="@id/img2"
            android:layout_marginRight="20px"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36px"
            android:text="独家"
            android:textColor="@color/normal_blue_light1"
            />

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/normal_gray_light2"
        ></View>
</com.zhy.autolayout.AutoRelativeLayout>