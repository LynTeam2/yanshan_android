<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_blue_light1">
    <View
        android:id="@+id/status_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60px"></View>
    <com.ycl.framework.view.TitleHeaderView
        android:layout_below="@id/status_bar_layout"
        android:id="@+id/header"
        android:layout_width="match_parent"
        app:title_name=""
        android:layout_height="160px"
        app:title_back_visibility = "false"/>
    <LinearLayout
        android:id="@+id/datelinear"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:layout_marginTop="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text=" "/>
        <TextView
            android:layout_marginLeft="30px"
            android:id="@+id/xingqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text=" "/>
        <TextView
            android:layout_marginLeft="30px"
            android:id="@+id/nongli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="36px"
            android:text=" "/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="200px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/datelinear"
        android:id="@+id/wendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text=" "
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        ></TextView>
    <RelativeLayout
        android:layout_marginLeft="53px"
        android:layout_marginRight="53px"
        android:layout_marginBottom="86px"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="815px"
        android:background="@drawable/weather_bg"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="185px"
            android:id="@+id/rv"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>