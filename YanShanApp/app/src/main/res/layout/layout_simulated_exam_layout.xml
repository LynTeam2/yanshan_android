<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
    <com.ycl.framework.view.TitleHeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.ycl.framework.view.TitleHeaderView>
    <include
        layout="@layout/layout_divider_line1px"
        ></include>
    <cn.gov.bjys.onlinetrain.act.view.RoundImageViewByXfermode
        android:layout_marginTop="60px"
        android:layout_centerHorizontal="true"
        android:layout_width="180px"
        android:layout_height="180px"
        android:src="@mipmap/wx_login_icon"
        app:type="circle" >
    </cn.gov.bjys.onlinetrain.act.view.RoundImageViewByXfermode>
    <TextView
        android:layout_marginTop="40px"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42px"
        android:textColor="@color/normal_black"
        android:text="用户名"/>
    
    <LinearLayout
        android:layout_marginTop="100px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="180px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试类型"
                android:textSize="42px"
                android:textColor="@color/normal_black"/>
            <TextView
                android:id="@+id/exam_type_name"
                android:layout_marginLeft="170px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合试题"
                android:textSize="42px"
                android:textColor="@color/normal_gray">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="180px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试时间"
                android:textSize="42px"
                android:textColor="@color/normal_black"/>
            <TextView
                android:id="@+id/exam_time"
                android:layout_marginLeft="170px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90分钟"
                android:textSize="42px"
                android:textColor="@color/normal_gray">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="180px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合格标准"
                android:textSize="42px"
                android:textColor="@color/normal_black"/>
            <TextView
                android:id="@+id/exam_value"
                android:layout_marginLeft="170px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90分"
                android:textSize="42px"
                android:textColor="@color/normal_gray">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="180px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出题标准"
                android:textSize="42px"
                android:textColor="@color/normal_black"/>
            <TextView
                android:id="@+id/exam_biaozhun"
                android:layout_marginLeft="170px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="根据企业安全标准"
                android:textSize="42px"
                android:textColor="@color/normal_gray">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="140px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_gray"
        android:text="温习提示：温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示温习提示"/>
    </LinearLayout>
        <Button
            android:layout_marginLeft="85px"
            android:layout_marginRight="85px"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="300px"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:text="开始考试"
            android:textColor="@color/white"
            android:background="@color/normal_blue"/>
</com.zhy.autolayout.AutoRelativeLayout>