<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_root_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_blue_light1">
    <!--android:paddingTop="@dimen/statue_bar_top_padding"-->

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_title_root"
        android:layout_width="match_parent"
        android:layout_height="160px">

        <TextView
            android:id="@+id/tv_title_header_titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="sss"
            android:paddingEnd="42dp"
            android:paddingStart="45dp"
            android:textColor="#fff"
            android:textSize="48px" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_title_header_back"
            android:layout_width="82px"
            android:layout_height="61px"
            android:layout_centerVertical="true"
            android:paddingBottom="10px"
            android:paddingRight="25px"
            android:paddingLeft="35px"
            android:paddingTop="10px"
            android:scaleType="fitXY"
            android:src="@drawable/icon_back_title2" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#f0f0f0"
        android:layout_below="@+id/ll_title_root" />
</RelativeLayout>