<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:gravity="center"
        android:text="分享"
        android:background="#ccffffff"
        android:textColor="#666666"
        android:textSize="48px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="342px"
        android:background="@color/color_gray_default"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_weixincircle"
            style="@style/item_share_ll_root">

            <ImageView
                style="@style/item_share_iv_pic"
                android:src="@drawable/umeng_socialize_wxcircle" />

            <TextView
                style="@style/item_share_tv"
                android:text="朋友圈" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_weixin"
            style="@style/item_share_ll_root">

            <ImageView
                style="@style/item_share_iv_pic"
                android:src="@drawable/umeng_socialize_wechat" />

            <TextView
                style="@style/item_share_tv"
                android:text="微信" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_qzone"
            style="@style/item_share_ll_root">

            <ImageView
                style="@style/item_share_iv_pic"
                android:src="@drawable/umeng_socialize_qzone_on" />

            <TextView
                style="@style/item_share_tv"
                android:text="QQ空间" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_qq"
            style="@style/item_share_ll_root">

            <ImageView
                style="@style/item_share_iv_pic"
                android:src="@drawable/umeng_socialize_qq_on" />

            <TextView
                style="@style/item_share_tv"
                android:text="QQ" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sina"
            style="@style/item_share_ll_root"
            android:visibility="gone">

            <ImageView style="@style/item_share_iv_pic" />

            <TextView
                style="@style/item_share_tv"
                android:text="微博"
                android:textColor="#d15e52" />
        </LinearLayout>
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>