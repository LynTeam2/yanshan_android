<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--相册动画-->
    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!--主页 Tab-->
    <style name="tab_main_ll">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_main_iv">
        <item name="android:layout_width">84px</item>
        <item name="android:layout_height">84px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="tab_main_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#959699</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="ZoomTransparent" parent="@android:style/Animation.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!--popup动画-->
    <style name="Popup_Animation_UpDown" mce_bogus="1" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/enter_dropup</item>
        <item name="android:windowExitAnimation">@anim/exit_dropdown</item>
    </style>

    <!--dialog动画-->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_dropup</item>
    </style>


    <!-- BaseDialog 按钮样式 -->
    <style name="Style_Dialog_Button">
        <item name="android:textColor">#00bfff</item>
        <item name="android:layout_height">@dimen/dialog_min_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BaseDialog 样式 -->
    <style name="Theme_Light_FullScreenDialogAct" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!--分享 style-->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.4</item><!--背景灰度  默认 0.5-->
    </style>

    <style name="gift_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0</item><!--背景灰度  默认 0.5-->
    </style>


    <style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--所有video 遮罩层-->
    <style name="style_video_mask">
        <item name="android:background">
            @drawable/bg_corner_10dp
        </item>
    </style>


    <!--分享-->
    <style name="item_share_iv_pic">
        <item name="android:layout_width">170px</item>
        <item name="android:layout_height">170px</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="item_share_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40px</item>
        <item name="android:textColor">@color/new_black</item>
    </style>

    <style name="item_share_ll_root">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
